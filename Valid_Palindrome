public class Solution {
    public bool IsPalindrome(string s) {
        if (s.Length <= 1)  return true;
        s = s.ToLower();
        int i = 0;
        int j = s.Length-1;
        while(i <= j){
            if (!Char.IsLetterOrDigit(s[i]))   {i++;   continue;}
            if (!Char.IsLetterOrDigit(s[j]))   {j--;   continue;}
            if (s[i] != s[j])   return false;
            i++;
            j--;
        }
        return true;
    }
}
